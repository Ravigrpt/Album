<div style="background-color:lightgreen;border-radius:10px;padding:20px;">
	<div style="background-color:lightyellow;border-radius:10px;padding:20px;padding-bottom:-20px;">
		<%= form_for @photo do |f| %>
			<div style="background-color:green;padding:20px;border-radius:10px;margin:0 auto 20px;width:325px;">
				<div>
					<%= f.label :name %><br/>
					<%= f.text_field :name, :size => "20" %>
				</div><br/>
				<div>
					<%= f.label :title %><br/>
					<%= f.text_field :title, :size => "20" %>
				</div><br/>
				<div>
					<%= f.label :description %><br/>
					<%= f.text_area :description, :size => "30" %>
				</div><br/>
				<div>
					<%= f.label :image %><br/>
					<%= f.file_field :image, :size => "100" %>
				<div><br/>
				<%= f.hidden_field :album_id, :value => @photo.album_id %>
				<%= f.submit "save" %>
			</div>
		<% end %>
	</div>
</div>

