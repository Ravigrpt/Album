<h3>Albums</h3>
<table style="width:100%;background-color:red;" border="1">
	<th>Name</th>
	<th>Title</th>
	<th>Description</th>
	
		<% @albums.each do |album| %>
		<tr>
			<td><%= link_to album.name,album_path(album.id) %></td>
			<td><%= album.title %></td>
			<td><%= album.description %></td>
		</tr>
		<% end %>
</table>